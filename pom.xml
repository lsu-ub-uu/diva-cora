<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>se.uu.ub.cora</groupId>
		<artifactId>cora-parent</artifactId>
		<version>1.1.1</version>
	</parent>

	<artifactId>diva</artifactId>
	<version>4.3.0</version>
	<packaging>war</packaging>

	<name>DiVA Cora</name>
	<build>
		<finalName>diva</finalName>
	</build>

	<properties>
		<logger.version>2.1.0</logger.version>
		<coralog4j.version>2.1.0</coralog4j.version>
		<json.version>2.1.0</json.version>
		<spider.version>4.5.0</spider.version>
		<therest.version>5.2.0</therest.version>
		<beefeater.version>3.3.0</beefeater.version>
		<bookkeeper.version>4.10.0</bookkeeper.version>
		<basicdata.version>1.11.0</basicdata.version>
		<storage.version>3.7.0</storage.version>
		<basicstorage.version>3.14.0</basicstorage.version>
		<gatekeeper.version>3.5.0</gatekeeper.version>
		<gatekeeperclient.version>3.8.0</gatekeeperclient.version>
		<divamixedstorage.version>4.3.0</divamixedstorage.version>
		<solrsearch.version>3.5.0</solrsearch.version>
		<metacreator.version>4.0.0</metacreator.version>
		<httphandler.version>2.1.0</httphandler.version>
		<sqldatabase.version>2.5.0</sqldatabase.version>
		<servlet-api.version>4.0.1</servlet-api.version>
	</properties>

	<scm>
		<connection>scm:git:https://github.com/lsu-ub-uu/diva-cora.git</connection>
		<developerConnection>scm:git:https://github.com/lsu-ub-uu/diva-cora.git</developerConnection>
		<url>https://github.com/lsu-ub-uu/diva-cora.git</url>
	  <tag>diva-4.3.0</tag>
  </scm>

	<repositories>
		<repository>
			<id>maven-public</id>
			<name>LSU Nexus Repository</name>
			<url>http://epc.ub.uu.se/nexus/repository/maven-public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<updatePolicy>daily</updatePolicy>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

